{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Analyze",
      "type": "shell",
      "command": "flutter",
      "args": ["analyze"],
      "problemMatcher": ["$dart-build_runner"]
    },
    {
      "label": "Flutter: Test",
      "type": "shell",
      "command": "flutter",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Flutter: Analyze & Test",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile", "-Command", "flutter analyze; if ($LASTEXITCODE -eq 0) { flutter test } else { exit $LASTEXITCODE }"]
    }
  ]
}
